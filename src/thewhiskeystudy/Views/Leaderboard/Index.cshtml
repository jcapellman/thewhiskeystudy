@model List<thewhiskeystudy.Objects.LeaderboardListResponseItem>

@{
    ViewBag.Title = "Leaderboard";
}

<h1>Leaderboard</h1>

@foreach (var category in Model.GroupBy(a => a.Category).Select(b => b.Key))
{
    <h3>@category</h3>

    <div class="leaderboardCategoryContainer">
        @for (var x = 0; x < Model.Where(a => a.Category == category).ToList().Count; x++)
        {
            var review = Model.Where(a => a.Category == category).ToList()[x];

            var index = x + 1;

            <div class="leaderboardContainer">
                <span class="Ranking">#@index</span> <a href="@review.URL">@review.Name</a><br/>

                <img src="images/thumbnails/@review.ThumbnailImage" alt="@review.Name" />

                <div class="additionalInformation">
                    <span class="labelHeader">Price</span>
                    <span class="labelValue">$@review.Price</span>
                 
                    <span class="labelHeader">Status</span>
                    <span class="labelValue">@review.Status</span>
                </div>
            </div>
        }
    </div>
}