@model List<thewhiskeystudy.lib.Objects.SuggestionModelItem>

@{
    ViewData["Title"] = "Suggestion";
}

<div class="row" style="margin-top: 20px;">
    <img src="~/images/headerlogo.png" class="img-responsive center-block" alt="The Whiskey Study"  />
    
    <div class="body-text" style="margin-top: 10px;">
        <a href="/" class="btn btn-primary center-block" role="button">return to form</a>
        
        @if (!Model.Any())
        {
            <h3 class="text-center">Sorry no matches were found, please revise your search criteria</h3>
        }
        else
        {
            <h3 class="text-center">@Model.Count matches were found</h3>

            foreach (var item in Model)
            {
                @Html.Partial("_SuggestionBox", item)
                <hr/>
            }
        }
    </div>
</div>